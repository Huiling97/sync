<%= simple_form_for [@draft, @comment], data: {insert_comments_target: "form"}, html: {class: "comment-form"} do |f| %>
  <%= f.input :content, name: "content",
    input_html: {
      data: {
        insert_comments_target: "content"
        }}%>
  <%= f.submit "Add comment", class: "comment-btn" %>
<% end %>
