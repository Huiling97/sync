<div class="container d-flex">
  <div class="w-25">
    <%= deliverable.due_date %>
  </div>
  <div class="flex-grow-1">
    <a href="<%=deliverable_path(deliverable)%>">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title"><%= deliverable.deliverable_type %></h5>
          <p class="card-text"><%= deliverable.description %></p>
        </div>
      </div>
    </a>
  </div>
  <%= link_to "Delete deliverable", deliverable_path(deliverable), method: :delete %>
</div>
