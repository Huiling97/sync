
<div class="card-white-and-date mx-auto rounded">
  <div class="date-cat">
    <%= deliverable[0].strftime("%b") %>
    <%= deliverable[0].strftime("%e") %>,
    <%= deliverable[0].strftime("%a") %>
  </div>

  <% if @project.status != "saved" %>
    <% deliverable[1].each do |deliv| %>
      <div class='card-animation'>
        <%= link_to deliverable_path(deliv) do %>
          <div class="card-white-less-radius deliverable-review mb-3">
            <h3><%= deliv.deliverable_type %></h3>
            <p><%= deliv.description %><p>
            <% deliv.tag_list.each do |tag|%>
              <span class="badge badge-primary custom-badge"><%= tag %></span>
            <% end %>
          </div>
        <% end %>
      </div>
    <% end %>
  <% else %>
    <% deliverable[1].each do |deliv| %>
      <div class="card-white deliverable-review mb-3">
        <h3><%= deliv.deliverable_type %></h3>
        <p><%= deliv.description %><p>
        <% deliv.tag_list.each do |tag|%>
          <span class="badge badge-primary custom-badge"><%= tag %></span>
        <% end %>
      </div>

    <% end %>
  <% end %>
</div>
