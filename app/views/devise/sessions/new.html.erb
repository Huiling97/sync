<%= simple_form_for(resource, as: resource_name, url: user_session_path) do |f| %>
  <h2>Log in</h2>
  <div class="form-inputs">
    <%= f.hidden_field :token, value: params[:token], name: 'token' if params[:token].present? %>
    <%= f.hidden_field :role_token, value: params[:role_token], name: 'role_token' if params[:role_token].present? %>
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" } %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions btn btn-primary">
    <%= f.button :submit, "Log in" %>
  </div>

  <div class="py-2">
    <%= render "devise/shared/links" %>
  </div>
<% end %>
