<div class="d-flex my-2 deliv-drafts align-items-center">
  <div class="submitted-date">
    submitted <br>
    <%= draft.created_at.strftime("%b %e, %a") %>
  </div>
  <div class="card summary">
    <div class="card-body description">
      <%= draft.description %>
    </div>
    <div class="comments">
      <%= link_to  "view comments", draft_path(draft) %>
    </div>
  </div>
</div>
