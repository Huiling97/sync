<div class="card-frosted draft-panel" data-controller="toggle">
  <div class="d-flex justify-content-between align-items-center">
    <div class="custom-header">
      <h1><%= @draft.deliverable.deliverable_type %></h1>
      <h3><%= @draft.deliverable.description %></h3>
    </div>
  </div>
  <div class="d-flex align-items-start">
    <div class="preview d-flex align-items-center justify justify-content-center">
      <% @draft.attachments.each do |attachment| %>
        <% if attachment.content_type == "application/pdf" %>
          <%= link_to "Download PDF", @draft.attachment.url, target: :blank %>
      <% else %>
        <img src="<%= attachment.url %>" alt="image" width='250' height='300' class="flex-grow-1">
      <% end %>
    <% end %>
    </div>
    <div class="comments-list">
      <div class="new-comment">
        <a class="comment-btn" data-toggle-target="button" data-action="click->toggle#newComment">Add new comment</a>
        <div data-toggle-target="commentForm" class="d-none">
          <%= render 'comments/new'%>
        </div>
      </div>
      <%= render @comments %>
    </div>
  </div>

</div>
