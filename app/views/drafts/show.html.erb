<div class="container">
  <nav aria-label="breadcrumb">
    <ol class="breadcrumb breadcrumb-custom">
      <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
      <li class="breadcrumb-item"><a href="/projects/<%= @draft.deliverable.project.id %>">Existing Project</a></li>
      <li class="breadcrumb-item"><a href="/deliverables/<%= @draft.deliverable.id%>">Deliverables</a></li>
      <li class="breadcrumb-item active" aria-current="page">Draft</li>
    </ol>
  </nav>

<%# heading %>
  <div class="card-white py-3 pl-3 mb-4 d-flex align-items-center justify-content-between">
    <div>
      <div class="review-card-title"><%=@draft.deliverable.project.brand%>: <%= @draft.deliverable.project.name %></div>
      <div class="review-card-description"><%= @draft.deliverable.project.description %></div>
    </div>
      <% if (@draft.user != current_user) && (@draft.status!= "approved")%><a class="comment-btn" href="<%=draft_approve_path(@draft)%>">Approve this draft</a> <% end %>
    <div>
    </div>
  </div>

<%# submitted draft %>
  <div class="card-frosted draft-panel" data-controller="toggle">
    <div class="d-flex justify-content-between align-items-center">
      <div class="custom-header pb-3 pl-2">
        <div class="review-card-title"><%= @draft.deliverable.deliverable_type %></div>
        <div class="review-card-description"><%= @draft.deliverable.description %></div>
      </div>
      <div class='pr-4'>
        <p>Deliverable due in  <%= pluralize (@draft.deliverable.due_date - Date.today).to_i,"day"%></p>
      </div>
    </div>

    <div class='d-flex align-items-start flex-row d-flex justify-content-around'>
      <div id="carouselExampleCaptions" class="carousel slide col-6 pl-5" data-ride="carousel">
        <ol class="carousel-indicators">
          <li data-target="#carouselExampleCaptions" data-slide-to="0" class="active"></li>
          <li data-target="#carouselExampleCaptions" data-slide-to="1"></li>
          <li data-target="#carouselExampleCaptions" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
        <% @draft.attachments.each_with_index do |attachment,index| %>
          <% if index == 0 %>
            <div class="carousel-item active">
              <img src="<%= attachment.url %>" class="d-block w-100" alt="image">
              <div class="carousel-caption carousel-caption-custom d-none d-md-block">
                <p><%= @draft.description %></p>
              </div>
            </div>
          <% else %>
            <div class="carousel-item">
              <img src="<%= attachment.url %>" class="d-block w-100" alt="image">
              <div class="carousel-caption carousel-caption-custom d-none d-md-block">
                <p><%= @draft.description %></p>
              </div>
            </div>
          <% end %>
        <% end %>
        </div>
        <button class="carousel-control-prev" type="button" data-target="#carouselExampleCaptions" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-target="#carouselExampleCaptions" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </button>
      </div>
      <div class="comments-list col-4 pr-5">
        <div class="new-comment">
          <a class="comment-btn" data-toggle-target="button" data-action="click->toggle#newComment">Add new comment</a>
          <div data-toggle-target="commentForm" class="d-none">
            <%= render 'comments/new'%>
          </div>
        </div>
        <%= render @comments %>
      </div>
    </div>
  </div>
</div>

                <%# if attachment.content_type == "application/pdf" %>
                  <%#= link_to "Download PDF", @draft.attachment.url, target: :blank %>
                <%# else %>
