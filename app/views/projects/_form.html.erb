<%= simple_form_for @project, action:"projects/#{@project.id}", method: :post, data: {controller: "update-project", update_project_target: "form"} do |f| %>
    <%= f.input :brand, name: "brand_name",
    input_html: {
      data: {
        update_project_target: "brand",
        action: "keyup->update-project#updateProject"
        }}%>
    <%= f.input :name, name: "project_name",  input_html: {
      data: {
        update_project_target: "projectName",
        action: "keyup->update-project#updateProject"
        }}%>
    <%= f.input :description, name: "description", input_html: {
      data: {
        update_project_target: "description",
        action: "keyup->update-project#updateProject"
        }}%>
    <%= f.input :project_end, name: "project_end",  input_html: {
      data: {
        update_project_target: "projectEnd",
        action: "change->update-project#updateProject"
        }} %>
    <%= f.submit "Create Project" %>
  <% end %>
