<form action="/projects/<%= @project.id %>/project_confirmations/create" method="POST" data-email-popup-target="email" >
  <div class="card-body custom-card-body">
    <input type="text" name="client_email" placeholder="Email" class="bordeless-input my-1">

    <div class='d-flex'>
      <input id="viewer" name="viewer" type="checkbox" value="1" />
      <label for="viewer">Viewer</label>
    </div>
    <div class="d-flex">
      <input id="commentor" name="commentor" type="checkbox" value="1" />
      <label for="commentor">Commentor</label>
    </div>
    <div class="d-flex">
      <input id="editor" name="editor" type="checkbox" value="1" />
      <label for="editor">Editor</label>
    </div>

    <%# <input type="text" name="email_subject" placeholder="Subject" class="bordeless-input my-1"> %>
    <textarea name="email_body" cols="20" rows="5" placeholder="Type your message here" class="bordeless-input my-1"></textarea>
    <input type="hidden" name="project" value=<%= @project.id %>>
    <input type="hidden" name="token" value=<%= @project.token %>>
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <button type="submit" class="btn btn-primary btn-sm btn-trigger mt-2" value="<%= @project.id %>" data-email-popup-target="emailBtn" data-action="click->email-popup#updateStatus">Confirm</button>
  </div>
</form>
