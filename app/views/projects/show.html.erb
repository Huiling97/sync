<h1>Review project</h1>

<h3><%= @project.name %></h3>
<p><%= @project.description %></p>

<%= render @deliverables %>

<form action="/project_confirmations/create" method="POST">
  <input type="text" name="client_email" placeholder="Email">
  <input type="text" name="email_subject" placeholder="Subject">
  <input type="text" name="email_body">
  <input type="hidden" name="project" value=<%= @project.id %>>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <button type="submit">Confirm</button>
</form>
